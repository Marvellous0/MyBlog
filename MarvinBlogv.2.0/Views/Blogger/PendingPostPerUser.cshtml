@model List<MarvinBlogv._2._0.DTO.PostDTo>

@{
    Layout = "BloggerDashboard";
}

<div class="container">
    <br />
    <h2 class="text-center font-weight-bold font-italic"  style="font-family:'Times New Roman'">Pending Posts</h2>
    @if (Model.Count > 0)
    {
<table class="table table-striped ">

    @foreach (var post in Model)
    {
        <tr>
            <td>
                <span style="font-family:'Times New Roman'">
                    <span class="font-weight-bolder">
                        @post.PostTitle

                        @foreach (var category in post.PostCategories)
                        {

                            <a style="border-radius:20px; margin-left: 20px; color:black; border-color:black" asp-controller="Category"
                               asp-action="GetPostByCategoryId" asp-route-Id="@category.Id"
                               class="font-weight-bold btn btn-outline-light">@category.Name</a>
                        }
                    </span> <br /> <span>@post.Description</span>
                </span> 

            </td>
            <td>
                <img style="width:60%; height:50px;"  src="@WC.PostImagePath@post.ImageUrl" />
            </td>
            <td>
                <form method="post">
                    @if (post.Status == false)
                    {
                        <a asp-route-Id="@post.Id" asp-controller="Post" asp-action="Update" class="btn btn-success mx-2">
                            <i class="fas fa-edit"></i>
                        </a>
                    }
                </form>

            </td>
        </tr>
    }

</table>
    }
    else
    {
        <h4 class="text-center font-weight-bold font-italic" style="color:grey">No Pending Posts</h4>
    }

</div>